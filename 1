Q.Given a number , find the different number of ways to write this number as the sum of { 1 , 2 , 3 }, the given number is 5 .

Solution :- 

//Top Down Approach
#include <iostream>
#include<vector>
using namespace std;
int function(vector<int>&dp,int n)
{
    if(n==1)
    {
        return 1;
    }
    else if(n==2)
    {
        return 2;
    }
    else if(n==3)
    {
        return 4;
    }
    if(dp[n]!=-1)
    {
        return dp[n];
    }
    dp[n]=function(dp,n-1)+function(dp,n-2)+function(dp,n-3);
    return dp[n];
}
int main()
{
    int n=5;
    vector<int>dp(n+1,-1);
    cout<<function(dp,n);
    return 0;
}


//Bottom Up Approach
#include <iostream>
#include<vector>
using namespace std;
int function(int n)
{
    vector<int>dp(n+1);
    dp[1]=1;
    dp[2]=2;
    dp[3]=4;
    for(int i=4;i<=n;i++)
    {
        dp[i]=dp[i-1]+dp[i-2]+dp[i-3];
    }
    return dp[n];
}
int main()
{
    int n=5;
    cout<<function(n);
    return 0;
}

